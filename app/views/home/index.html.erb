<div class="scroll-snap-container">
  <div class="scroll-snap-item">
    <div id="myCarousel" class="carousel slide landing-margin" data-bs-ride="carousel" data-bs-interval="6000">
      <div class="carousel-inner">
        <% carousel_images = ["landing_pic_1.jpg", "landing_pic_2.jpg", "landing_pic_3.jpg", "landing_pic_4.jpg"] %>
        <% carousel_images.each_with_index do |image, index| %>
          <div class="carousel-item <%= "active" if index.zero? %>">
            <%= image_tag("#{image}", class: "d-block w-100") %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="countdown-overlay">
      <div id="countdown"></div>
    </div>
  </div>
  <section class="scroll-snap-item about-section" id="about-section">
    <div class="container top-margin">
      <h2>Welcome to the Boulder Bike Tour!</h2>
